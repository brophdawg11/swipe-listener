{
  "name": "swipe-listener",
  "version": "2.0.0",
  "description": "Zero-dependency, minimal swipe-gesture listener for the web.",
  "main": "dist/swipe-listener.min",
  "scripts": {
    "build": "npm run clean && npm run build-minified && npm run build-unminified",
    "build-base": "parcel build swipe-listener.js --global SwipeListener --experimental-scope-hoisting --target browser",
    "build-minified": "npm run build-base -- --out-file swipe-listener.min.js",
    "build-unminified": "npm run build-base -- --no-minify",
    "clean": "rm -rf dist/",
    "start": "parcel swipe-listener.html -p 3000 --open --global SwipeListener --target browser"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umanghome/swipe-listener.git"
  },
  "keywords": [
    "swipe",
    "gesture",
    "event",
    "listener",
    "js",
    "web",
    "dom",
    "gestures"
  ],
  "author": "umanghome",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umanghome/swipe-listener/issues"
  },
  "homepage": "https://github.com/umanghome/swipe-listener",
  "devDependencies": {
    "parcel-bundler": "^1.12.3"
  }
}
